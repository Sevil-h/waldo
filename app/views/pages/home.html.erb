              <span class="communities__icon"><%= render 'community' %></span>
              <span class="communities__icon"><%= render 'community' %></span>
              <span class="communities__icon"><%= render 'community' %></span>
              <span class="communities__icon"><%= render 'community' %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
